<% include ../partials/header %> 

<div class="row settings-row">
    <div class="col-md-12">
        <h3>Account Settings</h3>
        <hr>
        <form id="avatar-form"  action="/settings/<%= user._id %>?_method=PUT" enctype="multipart/form-data" method="POST" data-toggle="validator">
        <div class="form-group settings-img-group">
            <img src="<%= user.avatar %>" id="settings-avatar" class="img-circle" alt="User Avatar">
            <div class="pull-right">
                <p id="avatar-header">Your Profile Photo</p>
                <input id="image-avatar-update" name="avatar" type="file" accept="image/*"/>
                <button id="select-avatar-btn" type="button" class="btn btn-default">Select File</button>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" type="text" name="username" id="username" value="<%= user.username %>">
        </div>
        <div class="form-group">
            <label for="currentPassword">Change Password</label>
            <input class="form-control" type="password" name="currentPassword" id="currentPassword" pattern="^[a-zA-Z0-9_.-]{6,}$" placeholder="Current Password">
        </div>
        <div class="form-group">
            <div class="form-inline row">
              <div class="form-group col-sm-6">
                <input class="form-control inline-password" type="password" name="password" id="password" pattern="^[a-zA-Z0-9_.-]{6,}$"
                 aria-describedby="passwordHelp" placeholder="New Password">
                <small id="passwordHelp" class="form-text text-muted">Password must contain at least 6 numbers/letters.</small>
              </div>
              <div class="form-group col-sm-6">
                <input class="form-control inline-password" type="password"  id="passwordConfirm" data-match="#password" data-match-error="Whoops, passwords don't match" placeholder="Confirm">
                <div class="help-block with-errors"></div>
              </div>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <button type="submit" id="updateUser-btn" class="btn btn-primary btn-lg">Update</button>
        </div>
        </form>
    </div>
</div>



<% include ../partials/footer %> 