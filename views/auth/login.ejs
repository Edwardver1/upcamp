<% include ../partials/header %>

<div class="form-center">
   <h1 class="text-center">Sign In</h1>    
   <form action="/login" method="POST">
     <div class="form-group">
       <label for="emailId">Email address</label>
       <input type="email" class="form-control" id="emailId" name="email" placeholder="Email">
     </div>
     <div class="form-group">
       <label for="passwordId">Password</label>
       <input type="password" class="form-control" name="password" id="passwordId" placeholder="Password" aria-describedby="passwordHelp">
       <small id="passwordHelp" class="form-text text-muted"><a id="forgot-navbar" href="/forgot">Forgot password</a></small>
     </div>
     <button type="submit" class="btn btn-primary btn-block">Log In</button>
     <a class="btn btn-block btn-social btn-facebook" href="/login/facebook">
        <span class="fa fa-facebook"></span> Login with Facebook
     </a>
   </form>
</div>




<% include ../partials/footer %>