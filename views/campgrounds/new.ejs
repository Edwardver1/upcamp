<% include ../partials/header %> 

<div class="row ">
        <h1 class="text-center">Create a New Campground</h1>
        <div class="form-center">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="campground[name]" id="name" placeholder="Name" required >
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name="campground[cost]" id="cost" placeholder="9.99" step="0.01" min="0" required >
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" type="text" rows="6" name="campground[description]" id="description" placeholder="Campground description"></textarea>
                </div>
                <div class="form-group">
                    <input id="myFile" name="file" type="file" accept="image/*" class="upload_field" style="display:none;" ></input>
                    <button type="button" onclick="document.getElementById('myFile').click();">Select File</button>
                </div>
                <div id="imgs-group" class="form-group">
                </div>     
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %> 