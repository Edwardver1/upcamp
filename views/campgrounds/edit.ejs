<% include ../partials/header %> 

<div class="row ">
        <h1 class="text-center">Update <%= campground.name %></h1>
        <p id="campId" class="hidden"><%= campground._id %></p>
        <div class="form-center">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>">
                </div>
                <div id="cost-group" class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control hidden" type="text" name="price[_id]" value="<%= campground.costs[0]._id %>">
                    <input class="form-control const-input" type="text" name="price[season]" id="season" value="<%= campground.costs[0].season %>" required aria-describedby="helpSeason">
                    <span id="helpSeason" class="help-block hidden">Please provide season.</span>
                    <input class="form-control const-input" type="number" name="price[cost]" id="cost" value="<%= campground.costs[0].price %>" step="0.01" min="0.01" required aria-describedby="helpCost">
                    <span id="helpCost" class="help-block hidden">Please provide cost.</span>
                    <% for(var i = 1; i < campground.costs.length; i++) {%>
                    <div class="divCost">
                        <input class="form-control hidden" type="text" name="price[_id]" value="<%= campground.costs[i]._id %>">
                        <input class="form-control const-input" type="text" name="price[season]"  value="<%= campground.costs[i].season %>" required aria-describedby="helpSeason<%=i%>">
                        <span id="helpSeason<%=i%>" class="help-block hidden">Please provide season.</span>
                        <input class="form-control const-input" type="number" name="price[cost]"  value="<%= campground.costs[i].price %>" step="0.01" min="0.01" required aria-describedby="helpCost<%=i%>">
                        <span id="helpCost<%=i%>" class="help-block hidden">Please provide cost. Min 0.01, Max 500</span>
                    </div>    
                    <% } %>
                    <a href="#" id="addCost" class="btn btn-default btn-sm" role="button">Add season</a>
                    <a href="#" id="removeCost" class="btn btn-default btn-sm hidden" role="button">Remove last</a>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" rows="6" type="text" name="campground[description]" id="description" ><%= campground.description %></textarea>
                </div>
                 <div class="form-group">
                     <label for="image">Image</label>
                    <input id="image" name="file" type="file" accept="image/*" class="upload_field" style="display:none;" ></input>
                    <br>
                    <input type="button" class="btn btn-default" id="select-img-btn" value="Select Image">
                </div>
                 <div id="imgs-group" class="form-group">
                     <div class="col-md-5 col-sm-5 col-logo">
                         <div class="thumbnail image-container logo">
                             <img class="img-inLine" src="<%= campground.images[0] %>">
                             <a class="removeIcon hidden" href="#"><i class="fa fa-times" aria-hidden="true"></i></a>
                             <input class="hidden" type="text" name="urls" value="<%= campground.images[0] %>">
                             <div class="caption">
                                 <a class="logo-btn hidden" href="#">Make Logo</a>
                                 <span class="logo-text">Logo</span>
                             </div>
                         </div>
                     </div>
                    <% for (var i = 1; i < campground.images.length; i++) { %>
                     <div class="col-md-5 col-sm-5">
                         <div class="thumbnail image-container">
                             <img class="img-inLine" src="<%= campground.images[i] %>">
                             <a class="removeIcon" href="#"><i class="fa fa-times" aria-hidden="true"></i></a>
                             <input class="hidden" type="text" name="urls" value="<%= campground.images[i] %>">
                             <div class="caption">
                                 <a class="logo-btn" href="#">Make Logo</a>
                                 <span class="logo-text hidden">Logo</span>
                             </div>
                         </div>
                     </div>
                        
                    <% } %>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %> 