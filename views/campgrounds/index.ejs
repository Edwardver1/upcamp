<% include ../partials/header %> 

     <header class="jumbotron">
         <div class="container">
             <h1><span class="glyphicon glyphicon-tent"></span> Welcome To UpCamp!</h1>
             <p>View our hand-picked campgrounds from all over the world</p>
             <% if (currentUser && currentUser.isAdmin) { %>
             <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
             </p>
             <% } %>
         </div>
     </header>
     
     <div class="row text-center flex-wrap" id="campground-grid">
        <% allCampgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= campground.images[0] %>">
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
       <% }); %>
    </div>


<% include ../partials/footer %>